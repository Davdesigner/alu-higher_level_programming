#!/bin/bash

if [ -z "$PYFILE" ]; then
    echo "Error: The PYFILE environment variable is not set."
    exit 1
fi

# Check if the specified Python file exists
if [ ! -f "$PYFILE" ]; then
    echo "Error: The specified Python file '$PYFILE' does not exist."
    exit 1
fi

# Create the output filename by appending 'c' to the input filename
PYFILEC="${PYFILE}c"

# Compile the Python script
echo "Compiling $PYFILE ..."
python3 -m py_compile "$PYFILE"

# Check if the compilation was successful
if [ $? -eq 0 ]; then
    echo "Compilation successful. Output filename: $PYFILEC"
    mv "__pycache__/$PYFILE" "$PYFILEC"
    rmdir "__pycache__"
else
    echo "Error: Compilation failed."
    exit 1
fi

